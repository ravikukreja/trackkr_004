<div id="graphs">
<script type="text/javascript" charset="utf-8">
	$(function(){
		new Highcharts.Chart({
			chart: {
				renderTo: "friend_chart1",
				height: 250,
				width: 450,
				backgroundColor: '#FCFFC5',
				defaultSeriesType: '<%= @graph_select_type %>'
			},
			tooltip:{
				backgroundColor: '#008000'
			},
			legend: {
				
				backgroundColor: '#008000',
			},
			
			title: {
				text: "Graph - 1"
			},
			
			plotOptions: {
				series: {
            	allowPointSelect: true}
        	},
			credits: {
				text: "trackkr",
				href: "www.trackkr.com"
			},
      		xAxis: {
        		type: "datetime"
      		},
      		yAxis: {
        		title: {
          		text: "Distance"
        	}},
      		series: [{
	  			name: "Actual",
				pointInterval: <%= 1.day * 1000 %>,
				pointStart: <%= @graph_select_range.to_i * 1000 %>,  
	  			data: <%= (@graph_select_range.to_date..Date.today).map {|date| UserProductPlanData.friend_actual_distance(date, user_product_plan_graph.friend_product_plan_id)}.inspect%>
			},
			{
	  			name: "Planned",
				pointInterval: <%= 1.day * 1000 %>,
				pointStart: <%= @graph_select_range.to_i * 1000 %>,  
				data: <%= (@graph_select_range.to_date..Date.today).map {|date| UserProductPlanData.friend_plan_distance(date, user_product_plan_graph.friend_product_plan_id)}.inspect%>
		}]
      });
    });
  </script> 
 
  <div id="friend_chart1" style="width:560px; height:300px;"> </div>
 </div> 
	
	



