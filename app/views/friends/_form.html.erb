<div style="border: 1px solid #000000;padding:3px;">
<h4>Already a Member?</h4>
<%= form_tag "/user_search",:method=>"get",:remote=>true do |f| %>
  <% if @friend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
      <% @friend.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field" style="float:left;margin-right:20px">
    Enter Trackkr Id :
    <%= text_field_tag :username %>  
  </div>
  <div style="float:left;margin-right:20px">OR</div>
    <div class="field" style="float:left;margin-left:10px;margin-right:10px;">
    Email:
    <%= text_field_tag :email %>
  </div>
  <%=hidden_field_tag :product_id,params[:product_id]%>
  <div class="actions">
    <%=submit_tag 'Search' %>
  </div>
  
<% end %>
<div id="search"></div>
</div>
<br></br>
<div style="border: 1px solid #000000;padding:3px;">
	<h4>Invite Your friend to Trackkr</h4>
<%= form_tag "/send_invite",:method=>"get" do |f| %>
    <div class="field" >
    Enter E-mail:
    <%= text_field :user,:email %>
  </div>
   <div class="field" >
    <%= text_area :user,:content,{:rows=>3,:cols=>60,:value=>"Hi : I have been using trackkr to track my #{Product.find(params[:product_id]).name rescue nil} . I thought you might be interested in "} %>
  </div>
  <%=hidden_field_tag :product_id,params[:product_id]%>
  <div class="actions" style="margin-left:400px;">
    <%=submit_tag 'Send Invite' %>
  </div>
  
<%end%>	
</div>
