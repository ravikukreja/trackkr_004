<tr>
	<div class="field">  
   	<td><%= f.text_field :user_product_plan_id, :size => 3 %></td>
 	</div>
	<% if params[:date] %>
  	<div class="field">  
  		<td><%= f.date_select :training_date, :use_month_numbers => true, :default=> {:year => params[:date].split('-').first.to_i, :day=>params[:date].split('-').last.to_i,:month=>params[:date].split('-')[1].to_i} %></td>
    </div>
	<% else %>
		<div class="field">  
  		<td><%= f.date_select :training_date, :use_month_numbers => true %></td>
    </div>
	<% end %>
  	<div class="field">  
		<td> <%= f.text_field :actual_distance, :size => 3 %></td>
   	</div>
	
  	<div class="field">  
   		<td><%= f.text_field :actual_speed,:size => 3 %></td>
  	</div>
	
  	<div class="field">
     	<td><%= f.text_field :actual_time,:size => 3 %></td>
    </div>

  	<div class="field">
  		<td><%= f.text_area :actual_notes, :rows => 1, :cols => 10 %></td>
    </div>
	
	<div class="field">  
		<td> <%= f.text_field :plan_distance, :size => 3 %></td>
   	</div>
	
  	<div class="field">  
   		<td><%= f.text_field :plan_speed,:size => 3 %></td>
  	</div>
	
  	<div class="field">
     	<td><%= f.text_field :plan_time,:size => 3 %></td>
    </div>
	
	<div class="field">
  		<td><%= f.text_area :plan_notes, :rows => 1, :cols => 10 %></td>
    </div>
</tr>
